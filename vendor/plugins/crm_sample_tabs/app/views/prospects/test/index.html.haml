= styles_for :lead

.title_tools
  = link_to_inline(:create_lead, new_lead_path) << " | "
  = link_to_inline(:options, options_leads_path)

.title
  %span#create_lead_title Leads
  = image_tag("loading.gif", :size => "16x16", :id => "loading", :style => "display: none;")
.remote#options{ hidden }
.remote#create_lead{ hidden }

.list#prospects
  - unless @prospects.empty?
    = render :partial => "prospect", :collection => @prospects
  - else
    = render :partial => "common/empty"

