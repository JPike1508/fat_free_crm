<h1>Listing prospects</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Home phone</th>
    <th>Email</th>
  </tr>

<% @prospects.each do |prospect| %>
  <tr>
    <td><%=h prospect.full_name %></td>
    <td><%=h prospect.first_name %></td>
    <td><%=h prospect.last_name %></td>
    <td><%=h prospect.home_phone %></td>
    <td><%=h prospect.email %></td>
    <td><%= link_to 'Show', prospect %></td>
    <td><%= link_to 'Edit', edit_prospect_path(prospect) %></td>
    <td><%= link_to 'Destroy', prospect, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New prospect', new_prospect_path %>